{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake-configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".", 
                "-B", "build", 
                "-G", "MinGW Makefiles", 
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
                "-DCMAKE_CXX_COMPILER=C:/MinGW/bin/g++.exe" ,
                "-DCMAKE_BUILD_TYPE=Debug" , // 添加 Debug 模式
                "-DCMAKE_CXX_FLAGS_DEBUG=-g"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "cmake-build",
            "type": "shell",
            "command": "cmake",
            "args": [
                    "--build",
                        "build",
                        "-j8"  // 并行使用 4 个线程
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "generate-launch",
            "type": "shell",
            "command": "node",
            "args": ["${workspaceFolder}/.vscode/generate_launch.js"],
            "group": {"kind": "build"},
            "dependsOn": "cmake-build",
            "problemMatcher": []
        }
    ]
}